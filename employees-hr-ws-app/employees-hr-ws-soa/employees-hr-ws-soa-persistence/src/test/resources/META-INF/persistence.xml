<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="EmployeesHRPUTest"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>org.osanchezhuerta.hr.employees.soa.model.Department</class>
		<class>org.osanchezhuerta.hr.employees.soa.model.DeptEmp</class>
		<class>org.osanchezhuerta.hr.employees.soa.model.DeptEmpPK</class>
		<class>org.osanchezhuerta.hr.employees.soa.model.DeptManager</class>
		<class>org.osanchezhuerta.hr.employees.soa.model.DeptManagerPK</class>
		<class>org.osanchezhuerta.hr.employees.soa.model.Employee</class>
		<class>org.osanchezhuerta.hr.employees.soa.model.Salary</class>
		<class>org.osanchezhuerta.hr.employees.soa.model.SalaryPK</class>
		<class>org.osanchezhuerta.hr.employees.soa.model.Title</class>
		<class>org.osanchezhuerta.hr.employees.soa.model.TitlePK</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hrdb" />
			<property name="javax.persistence.jdbc.user" value="hr" />
			<property name="javax.persistence.jdbc.password" value="hr" />
			<property name="eclipselink.logging.level" value="FINEST" />
			<property name="eclipselink.cache.shared.default" value="false" />
			<property name="eclipselink.cache.size.default" value="0" />
			<property name="eclipselink.cache.type.default" value="None" />
		</properties>
	</persistence-unit>
</persistence>
